// Zed settings
//
// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
//
// To see all of Zed's default settings without changing your
// custom settings, run `zed: open default settings` from the
// command palette (cmd-shift-p / ctrl-shift-p)
{
  "disable_ai": true,
  "inlay_hints": {
    "enabled": true,
    "show_value_hints": true,
    "show_type_hints": true,
    "show_parameter_hints": true,
    "show_other_hints": true,
    "show_background": false,
    "edit_debounce_ms": 700,
    "scroll_debounce_ms": 50,
    "toggle_on_modifiers_press": {
      "control": false,
      "alt": false,
      "shift": false,
      "platform": false,
      "function": false
    }
  },
  "ui_font_size": 16,
  "buffer_font_family": "JetBrainsMono Nerd Font",
  "buffer_font_size": 12,
  "buffer_font_features": {
    "calt": 1
  },
  "base_keymap": "VSCode",
  "minimap": {
    "show": "auto"
  },
  "icon_theme": {
    "mode": "system",
    "light": "Zed (Default)",
    "dark": "Zed (Default)"
  },
  "telemetry": {
    "diagnostics": false,
    "metrics": false
  },
  "vim_mode": true,
  // "helix_mode": true, // Enable when you're ready
  "theme": {
    "mode": "system",
    "light": "One Light",
    "dark": "One Dark"
  },
  "toolbar": {
    "breadcrumbs": false,
    "quick_actions": false
  },
  "auto_update": false,
  "tab_size": 2,
  "terminal": {
    "toolbar": {
      "breadcrumbs": false
    },
    "shell": {
      "program": "nu"
    }
  },
  "title_bar": {
    "show_sign_in": false
  }
}
